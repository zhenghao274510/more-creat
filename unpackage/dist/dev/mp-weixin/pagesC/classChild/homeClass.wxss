page {
  width: 100%;
  height: 100%;
}
.content {
  width: 100%;
  height: 100%;
}
.navTabBox {
  width: 100vw;
  color: #151624;
  font-size: 30rpx;
  font-weight: bold;
  background-color: #F8F8F8;
  padding: 0 30rpx;
  box-sizing: border-box;
  height: 90rpx;
}
.navTabBox .click {
  color: #ff4848;
}
.navTabBox .longTab {
  width: 50%;
  margin: 0 auto;
}
.navTabBox .longTab .longItem {
  width: 100rpx;
  display: inline-block;
  line-height: 90rpx;
  text-align: center;
  position: relative;
}
.navTabBox .longTab .underlineBox {
  position: absolute;
  bottom: 2px;
  left: 10%;
  height: 2px;
  width: 80%;
  -webkit-transition: 0.5s;
  transition: 0.5s;
  background-color: #ff4848;
}
.cascad-menu {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 100%;
  height: 100%;
}
.cascad-menu .left-menu {
  width: 260rpx;
  height: 100%;
  background: #f5f5f5;
  z-index: 999;
}
.cascad-menu .left-menu .left-item {
  height: 80rpx;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  color: #333;
}
.cascad-menu .left-menu .left-item.current {
  background: #fff;
  color: #FF4848;
  width: 100%;
}
.cascad-menu .right-menu {
  width: 100%;
}
.cascad-menu .right-menu .right-item {
  height: 100%;
}
.cascad-menu .right-menu .right-item .title {
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 20rpx;
  margin: 10rpx 0;
}
.cascad-menu .right-menu .right-item ._ul {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.cascad-menu .right-menu .right-item ._ul ._li {
  width: 33%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-top: 20rpx;
  color: #333;
}
.cascad-menu .right-menu .right-item ._ul ._li ._img {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 20px;
}
.cascad-menu .right-menu .right-item ._ul ._li ._span {
  width: 160rpx;
  font-size: 24rpx;
  text-align: center;
}

