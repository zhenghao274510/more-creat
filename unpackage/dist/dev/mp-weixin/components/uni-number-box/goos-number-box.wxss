
@charset "UTF-8";
.uni-numbox {
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	height: 50rpx;
	position: relative
}
.uni-numbox:after {
	content: '';
	position: absolute;
	-webkit-transform-origin: center;
	        transform-origin: center;
	box-sizing: border-box;
	pointer-events: none;
	top: -50%;
	left: -50%;
	right: -50%;
	bottom: -50%;
	/* border: 1px solid #c8c7cc; */
	/* border-radius: 12upx; */
	-webkit-transform: scale(.5);
	        transform: scale(.5)
}
.uni-numbox__minus,
.uni-numbox__plus {
	background-color: #f8f8f8;
	width: 50rpx;
	font-size: 40rpx;
	height: 100%;
	line-height: 50rpx;
	text-align: center;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	color: #333;
	position: relative
}
.uni-numbox__value {
	position: relative;
	background-color: #f8f8f8;
	width:50rpx;
	height: 100%;
	text-align: center;
	margin:0 10rpx;
}
.uni-numbox__value:after {
	content: '';
	position: absolute;
	-webkit-transform-origin: center;
	        transform-origin: center;
	box-sizing: border-box;
	pointer-events: none;
	top: -50%;
	left: -50%;
	right: -50%;
	bottom: -50%;
